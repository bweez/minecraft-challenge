{
  "name": "Minecraft Plugin Development",
  "image": "mcr.microsoft.com/devcontainers/java:17-bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-maven",
        "redhat.java",
        "vscjava.vscode-java-debug",
        "vscjava.vscode-java-test",
        "vscjava.vscode-java-dependency",
        "ms-vscode.vscode-json",
        "streetsidesoftware.code-spell-checker",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.atom-keybindings",
        "formulahendry.auto-rename-tag",
        "ms-vscode.vscode-typescript-next",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "EditorConfig.EditorConfig",
        "googlecloudtools.cloudcode",
        "ms-vscode.hexeditor"
      ],
      "settings": {
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-17",
            "path": "/usr/local/sdkman/candidates/java/current"
          }
        ],
        "java.compile.nullAnalysis.mode": "automatic",
        "java.configuration.updateBuildConfiguration": "automatic",
        "java.import.gradle.enabled": false,
        "java.import.maven.enabled": true,
        "maven.terminal.useJavaHome": true,
        "java.debug.logLevel": "warn",
        "java.test.defaultConfig": "default",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit",
          "source.fixAll": "explicit"
        },
        "files.associations": {
          "*.yml": "yaml",
          "plugin.yml": "yaml"
        },
        "yaml.schemas": {
          "https://json.schemastore.org/bukkit-plugin": "plugin.yml"
        },
        "workbench.colorTheme": "Default Light+",
        "workbench.iconTheme": "vs-seti",
        "terminal.integrated.defaultProfile.linux": "bash",
        "git.enableCommitSigning": false,
        "diffEditor.ignoreTrimWhitespace": false,
        "explorer.confirmDelete": false,
        "explorer.confirmDragAndDrop": false,
        "workbench.startupEditor": "welcomePageInEmptyWorkbench",
        "java.codeGeneration.insertionLocation": "afterCursor",
        "java.codeGeneration.generateComments": true,
        "java.codeGeneration.useBlocks": true,
        "java.saveActions.organizeImports": true,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "spellright.language": ["en"],
        "spellright.documentTypes": ["markdown", "plaintext", "java"],
        "cSpell.words": [
          "Bukkit",
          "Spigot",
          "minecraft", 
          "plugin",
          "teleport",
          "gamemode"
        ]
      }
    }
  },

  "forwardPorts": [
    25565,
    8080,
    3000
  ],
  "portsAttributes": {
    "25565": {
      "label": "Minecraft Server",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Web Interface", 
      "onAutoForward": "openBrowser"
    },
    "3000": {
      "label": "Development Server",
      "onAutoForward": "openBrowser"
    }
  },

  "postCreateCommand": "bash .devcontainer/setup.sh",
  
  "remoteUser": "vscode",
  
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "containerEnv": {
    "JAVA_HOME": "/usr/local/sdkman/candidates/java/current",
    "MAVEN_HOME": "/usr/local/sdkman/candidates/maven/current",
    "PATH": "/usr/local/sdkman/candidates/java/current/bin:/usr/local/sdkman/candidates/maven/current/bin:${PATH}"
  },

  "workspaceFolder": "/workspaces/minecraft-challenge",
  
  "shutdownAction": "stopContainer"
}
